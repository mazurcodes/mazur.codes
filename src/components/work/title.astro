---
import type { Project } from '@types';

interface Props {
  data: Project;
}

const { data } = Astro.props;
---

<section>
  <div class="mx-auto max-w-[260px] md:max-w-[600px] lg:max-w-[800px]">
    <h1 class={`text-[${data.title.color}] font-black text-4xl mb-16`}>
      {data.title.text}
    </h1>
    <h2 class="text-5xl font-bold md:text-6xl">{data.articleHeader}</h2>
    <h4 class="my-12 text-2xl md:text-3xl">{data.articleUnderline}</h4>
  </div>
</section>
