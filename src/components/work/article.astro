---
import type { Project } from '@types';

interface Props {
  header: string;
  title: string;
  text?: string;
}

const { header, title, text } = Astro.props;
---

<article>
  <h1 id={header} class="font-bold text-[#AFAFAF]">{header}</h1>
  <h2 class="mt-4 text-4xl font-bold">{title}</h2>
  {text && <p class="li py-8 leading-8">{text}</p>}
</article>
